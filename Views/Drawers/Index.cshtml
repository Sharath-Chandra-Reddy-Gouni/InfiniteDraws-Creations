@model InfiniteDraws_Creations.Models.DrawerTypeViewModel

@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager;
@inject UserManager<IdentityUser> UserManager;

@{
    ViewData["Type"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Drawers" asp-action="Index" method="get">
    <p>
        <select asp-for="DrawerType" asp-items="Model.Types">
            <option value="">All</option>
        </select>
        Title: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Drawers![0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Drawers![0].DrawerMaterial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Drawers![0].Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Drawers![0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Drawers![0].Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Drawers![0].Reviews)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Drawers!) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DrawerMaterial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reviews)
            </td>
            @if (User.IsInRole("Admin"))
            {
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            }   
        </tr>
}
    </tbody>
</table>
